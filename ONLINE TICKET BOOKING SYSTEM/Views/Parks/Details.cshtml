@using Microsoft.AspNetCore.Identity
@using ONLINE_TICKET_BOOKING_SYSTEM.Models
@inject SignInManager<ApplicationUser> SignInManager

@model ONLINE_TICKET_BOOKING_SYSTEM.Models.Park.ParkItem
@{
    ViewData["Title"] = "Park Details";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="container py-4">
    <div class="row g-4">
        <div class="col-lg-6">
            <img src="@(string.IsNullOrWhiteSpace(Model.CoverImageUrl) ? "/images/placeholders/park-cover.jpg" : Model.CoverImageUrl)"
                 alt="@Model.Title" class="img-fluid rounded shadow-sm" />
        </div>

        <div class="col-lg-6">
            <h2 class="fw-bold mb-2">@Model.Title</h2>

            <div class="text-muted mb-2">
                <i class="bi bi-geo-alt me-1"></i>@(string.IsNullOrWhiteSpace(Model.Location) ? Model.City : $"{Model.Location}, {Model.City}")
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.OpeningHours))
            {
                <div class="mb-2"><i class="bi bi-clock me-2"></i><strong>Hours:</strong> @Model.OpeningHours</div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Category))
            {
                <div class="mb-3"><span class="badge bg-success-subtle text-success border border-success">@Model.Category</span></div>
            }

            <p class="lead">@Model.Description</p>

            @if (SignInManager.IsSignedIn(User))
            {
                <div class="card border-0 shadow-sm rounded-3 mt-3">
                    <div class="card-body d-flex align-items-center justify-content-between flex-wrap gap-2">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-telephone-fill fs-4 text-success me-2"></i>
                            <div>
                                <div class="fw-semibold">Call to book your park ticket</div>
                                <div class="text-muted small">Available 9:00 AM – 10:00 PM</div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <a href="tel:16374" class="btn btn-success">
                                <i class="bi bi-telephone-outbound me-1"></i> 16374
                            </a>
                            <a asp-controller="Pages" asp-action="Contact" class="btn btn-outline-success">
                                <i class="bi bi-envelope-paper me-1"></i> Message Us
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-light border mt-3 d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <div>
                        Please <a asp-area="Identity" asp-page="/Account/Login" class="link-success fw-semibold">log in</a>
                        to view call & message options for booking.
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-success-subtle {
        background-color: rgba(25,135,84,.08) !important
    }</style>
