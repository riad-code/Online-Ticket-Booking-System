@model ONLINE_TICKET_BOOKING_SYSTEM.Models.Park.ParkItem
@{
    ViewData["Title"] = "Delete Park";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <h2 class="text-danger fw-bold mb-3">Delete Park</h2>
    <div class="alert alert-warning">
        Are you sure you want to delete <strong>@Model.Title</strong>?
    </div>

    <dl class="row">
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
        <dt class="col-sm-2">Available</dt>
        <dd class="col-sm-10">@Model.AvailableTickets</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i> Delete</button>
        <a asp-action="AdminIndex" class="btn btn-outline-secondary ms-1">Cancel</a>
    </form>
</div>
