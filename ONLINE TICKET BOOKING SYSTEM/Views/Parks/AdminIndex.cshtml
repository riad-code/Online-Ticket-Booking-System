@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Park.ParkItem>
@{
    ViewData["Title"] = "Manage Parks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<h2 class="mb-4 text-success fw-bold">Manage Parks</h2>

<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Create Park
    </a>
</p>

<table id="parksTable" class="table table-bordered table-striped align-middle" style="width:100%">
    <thead class="table-success text-success">
        <tr>
            <th style="width:90px;">Cover</th>
            <th>Title</th>
            <th style="width:140px;">City</th>
            <th style="width:160px;">Category</th>
            <th style="width:160px;">Opening Hours</th>
            <th style="width:140px;">Price From</th>
            <th style="width:130px;">Available</th>
            <th style="width:170px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model ?? Enumerable.Empty<ONLINE_TICKET_BOOKING_SYSTEM.Models.Park.ParkItem>())
        {
            <tr>
                <td class="text-center">
                    <img src="@(string.IsNullOrWhiteSpace(p.CoverImageUrl) ? "/images/placeholders/park-cover.jpg" : p.CoverImageUrl)"
                         alt="cover" style="width:70px;height:46px;object-fit:cover;border-radius:.5rem;border:1px solid #e6e6e6;" />
                </td>
                <td class="fw-semibold">@p.Title</td>
                <td>@p.City</td>
                <td>@p.Category</td>
                <td>@p.OpeningHours</td>
                <td>@(p.Currency ?? "৳") @((p.PriceFrom ?? 0m).ToString("0.##"))</td>
                <td>@(p.AvailableTickets ?? 0)</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a class="btn btn-sm btn-danger ms-1" asp-action="Delete" asp-route-id="@p.Id"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-success {
        background-color: #d1e7dd !important;
        color: #0f5132 !important
    }

    tbody tr:hover {
        background-color: #e6f4ea;
        cursor: default
    }

    th, td {
        vertical-align: middle !important;
        text-align: center
    }
</style>

@section Styles {
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(function () {
            $('#parksTable').DataTable({
                paging:true, searching:true, ordering:true, lengthChange:true, pageLength:10,
                language:{ search:"_INPUT_", searchPlaceholder:"Search parks..." },
                columnDefs:[ { orderable:false, targets:[0,7] } ]
            });
        });
    </script>
}
