@model ONLINE_TICKET_BOOKING_SYSTEM.ViewModels.AirPassengersFormVm
@{
    ViewData["Title"] = "Passengers";
    Layout = "_Layout";
}
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="mb-1">Enter Passenger Details</h4>
            <div class="text-muted">
                PNR: <strong>@Model.Pnr</strong> • @Model.From → @Model.To • @Model.TravelDate • @Model.Flight
            </div>

            <div class="alert alert-success mt-3 mb-0 d-flex justify-content-between align-items-center">
                <div><strong>Total Due</strong></div>
                <div class="fs-5 fw-bold">@Model.Currency @Model.AmountDue</div>
            </div>
            <hr class="mt-0" />

            <form asp-action="Passengers" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Pnr" />

                <!-- Contact -->
                <div class="border rounded p-3 mb-3">
                    <h6 class="fw-bold mb-3">Contact Details</h6>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Full Name</label>
                            <input name="ContactName" class="form-control"
                                   value="@(ViewBag.ContactName ?? string.Empty)" placeholder="Your full name" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Email</label>
                            <input type="email" name="ContactEmail" class="form-control"
                                   value="@(ViewBag.ContactEmail ?? string.Empty)" placeholder="you@example.com" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Phone</label>
                            <input name="ContactPhone" class="form-control"
                                   value="@(ViewBag.ContactPhone ?? string.Empty)" placeholder="01XXXXXXXXX" />
                        </div>
                    </div>
                </div>

                <div id="paxRows">
                    @for (int i = 0; i < Model.Passengers.Count; i++)
                    {
                        <div class="border rounded p-3 mb-3">
                            <!-- IMPORTANT for list model binding -->
                            <input type="hidden" name="Passengers.Index" value="@i" />

                            <h6 class="fw-bold mb-3">Passenger @(i + 1) (@Model.Passengers[i].Type)</h6>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label class="form-label">First Name</label>
                                    <input asp-for="Passengers[i].FirstName" class="form-control" required />
                                    <span asp-validation-for="Passengers[i].FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Last Name</label>
                                    <input asp-for="Passengers[i].LastName" class="form-control" required />
                                    <span asp-validation-for="Passengers[i].LastName" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Date of Birth</label>
                                    <input asp-for="Passengers[i].Dob" class="form-control dob" placeholder="yyyy-MM-dd" required />
                                    <span asp-validation-for="Passengers[i].Dob" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Gender</label>
                                    <select asp-for="Passengers[i].Gender" class="form-select">
                                        <option>Male</option>
                                        <option>Female</option>
                                        <option>Other</option>
                                    </select>
                                    <span asp-validation-for="Passengers[i].Gender" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Passport No (optional)</label>
                                    <input asp-for="Passengers[i].PassportNo" class="form-control" />
                                    <span asp-validation-for="Passengers[i].PassportNo" class="text-danger"></span>
                                </div>

                                <input type="hidden" asp-for="Passengers[i].Type" />
                            </div>
                        </div>
                    }
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div class="fw-bold">
                        Total Due: <span class="text-success">@Model.Currency @Model.AmountDue</span>
                    </div>
                    <button type="submit" class="btn btn-success">Continue to Payment</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script>
        $(function(){
            $('.dob').datepicker({
                dateFormat:"yy-mm-dd",
                changeMonth:true,
                changeYear:true,
                yearRange:"-100:+0"
            });
        });
    </script>
}
