@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <h1 class="fw-bold mb-4" style="color:#198754;">Contact Us</h1>

    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }

    <div class="row g-4">
        <div class="col-lg-6">
            <div class="p-4 bg-light rounded-3 h-100">
                <h5 class="fw-semibold mb-3">We’d love to hear from you</h5>
                <ul class="list-unstyled mb-4">
                    <li class="mb-2"><i class="bi bi-telephone-fill text-success"></i> Hotline: <b>16374</b></li>
                    <li class="mb-2"><i class="bi bi-envelope-fill text-success"></i> Email: support@riadtrip.com</li>
                    <li class="mb-2"><i class="bi bi-geo-alt-fill text-success"></i> Address: Road‑12, Sector‑10, Uttara, Dhaka‑1230</li>
                </ul>

                <form method="post" class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Your Name</label>
                        <input name="name" type="text" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Your Email</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="col-12">
                        <label class="form-label">Message</label>
                        <textarea name="message" class="form-control" rows="5" required></textarea>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-success px-4">Send Message</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="ratio ratio-16x9 rounded-3 overflow-hidden shadow-sm">
                <iframe src="https://www.google.com/maps?q=Uttara%20Dhaka&output=embed"
                        allowfullscreen loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>
