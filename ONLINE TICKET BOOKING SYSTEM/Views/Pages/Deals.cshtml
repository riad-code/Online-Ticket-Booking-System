@{
    ViewData["Title"] = "Deals & Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-0" style="color:#198754;">Deals & Offers</h1>
        <div class="input-group" style="max-width:320px;">
            <input type="text" class="form-control" placeholder="Enter promo code" />
            <button class="btn btn-success">Apply</button>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var i in Enumerable.Range(1, 6))
        {
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <span class="badge bg-success mb-2">Limited Time</span>
                        <h5 class="card-title">Save ৳100 on Dhaka ⇄ Chittagong</h5>
                        <p class="card-text text-muted">Use code <b>RTP100</b> on checkout. Valid for selected operators.</p>
                        <button class="btn btn-outline-success btn-sm">View Details</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
