@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.Airline>
@{
    ViewData["Title"] = "Airlines";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<h3 class="mb-3">Airlines</h3>
<p><a class="btn btn-success" href="/Airlines/Create">Create</a></p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th style="width:120px;">IATA</th>
            <th>Name</th>
            <th style="width:160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td class="fw-semibold">@a.IataCode</td>
                <td>@a.Name</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" href="/Airlines/Edit/@a.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Airlines/Delete/@a.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
