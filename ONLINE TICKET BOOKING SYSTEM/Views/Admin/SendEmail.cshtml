@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Send Notifications";
    var users = ViewBag.Users as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
}
<div class="container py-4">
    <h3 class="mb-3"><i class="fas fa-envelope text-success"></i> Send Email</h3>

    @if (TempData["err"] != null)
    {
        <div class="alert alert-danger">@TempData["err"]</div>
    }
    @if (TempData["ok"] != null)
    {
        <div class="alert alert-success">@TempData["ok"]</div>
    }

    <form asp-action="SendEmail" method="post" enctype="multipart/form-data" class="card shadow-sm p-3 border-0">
        @Html.AntiForgeryToken()

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Select User (optional)</label>
                <select name="toUserId" class="form-select">
                    <option value="">-- choose --</option>
                    @foreach (var u in users)
                    {
                        <option value="@u.Id">@u.Email (@u.Name)</option>
                    }
                </select>
                <div class="form-text">Or type email manually below.</div>
            </div>
            <div class="col-md-6">
                <label class="form-label">Or Email (optional)</label>
                <input name="toEmail" class="form-control" placeholder="user@example.com" />
            </div>

            <div class="col-md-12">
                <label class="form-label">Subject</label>
                <input name="subject" class="form-control" required />
            </div>

            <div class="col-md-12">
                <label class="form-label">Message (HTML allowed)</label>
                <textarea name="message" rows="6" class="form-control" placeholder="<p>Hello!</p>"></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label">Attachment (optional)</label>
                <input type="file" name="attachment" class="form-control" />
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-success"><i class="fas fa-paper-plane"></i> Send</button>
        </div>
    </form>
</div>
