@model ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.AirBooking
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Air – Review";
    var seg = Model.Itinerary?.Segments?.FirstOrDefault()?.FlightSchedule;
}
<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">PNR @Model.Pnr</h4>
            <span class="badge bg-warning text-dark">@Model.BookingStatus</span>
        </div>

        <div class="card-body">
            <h5 class="fw-bold text-secondary mb-2">Flight</h5>
            <div class="mb-1">@seg?.Airline?.Name (@seg?.Airline?.IataCode) — @seg?.FlightNumber</div>
            <div class="mb-3">@seg?.FromAirport?.IataCode → @seg?.ToAirport?.IataCode</div>

            <h6 class="fw-bold">Passengers</h6>
            <ul class="mb-3">
                @foreach (var p in Model.Passengers)
                {
                    <li>@p.FirstName @p.LastName (@p.Type)</li>
                }
            </ul>

            <h6 class="fw-bold">Payment</h6>
            <div class="mb-3">@Model.Currency @Model.AmountDue</div>

            @if (TempData["err"] != null)
            {
                <div class="alert alert-danger">@TempData["err"]</div>
            }
            @if (TempData["ok"] != null)
            {
                <div class="alert alert-success">@TempData["ok"]</div>
            }

            <div class="d-flex flex-wrap gap-2 mt-3">
                @if (Model.BookingStatus == ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.AirBookingStatus.PendingApproval)
                {
                    <form asp-action="Approve" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-success">
                            <i class="bi bi-check-circle-fill"></i> Approve & Send Ticket
                        </button>
                    </form>
                }

                @if (!string.IsNullOrWhiteSpace(Model.TicketPdfPath))
                {
                    <a class="btn btn-outline-primary" href="@Model.TicketPdfPath" target="_blank">
                        <i class="bi bi-file-earmark-pdf"></i> View Ticket
                    </a>
                }

                @* Show cancel actions when customer requested cancellation *@
                @if (Model.BookingStatus == ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.AirBookingStatus.CancelRequested)
                {
                    <form asp-action="ApproveCancellation" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-danger">
                            <i class="bi bi-x-circle-fill"></i> Approve Cancellation
                        </button>
                    </form>

                    <form asp-action="RejectCancellation" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-counterclockwise"></i> Reject Request
                        </button>
                    </form>
                }

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>
