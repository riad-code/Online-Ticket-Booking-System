@model ONLINE_TICKET_BOOKING_SYSTEM.Models.Event.EventItem
@{
    ViewData["Title"] = "Delete Event";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <h3 class="text-danger mb-3">Are you sure you want to delete this event?</h3>

    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title mb-2">@Model.Title</h4>
            <p class="mb-1"><strong>City:</strong> @Model.City</p>
            <p class="mb-1"><strong>Venue:</strong> @Model.Venue</p>
            <p class="mb-0"><strong>Date:</strong> @(Model.StartDateUtc?.ToLocalTime().ToString("dd MMM yyyy, h:mm tt") ?? "-")</p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i>Delete</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div>
