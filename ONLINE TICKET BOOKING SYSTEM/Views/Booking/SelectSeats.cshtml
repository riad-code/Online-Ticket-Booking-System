@model List<ONLINE_TICKET_BOOKING_SYSTEM.Models.ScheduleSeat>
@{
    Layout = "_Layout";
    var schedule = (ONLINE_TICKET_BOOKING_SYSTEM.Models.BusSchedule)ViewBag.Schedule;
    ViewData["Title"] = "Select Seats";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-success mb-0">Select Seats — @schedule.OperatorName (@schedule.FullRoute)</h4>
        <div class="text-end small">
            <div><strong>Date:</strong> @schedule.JourneyDate.ToString("dd MMM yyyy")</div>
            <div><strong>Time:</strong> @schedule.DepartureTime - @schedule.ArrivalTime</div>
            <div><strong>Fare:</strong> ৳@schedule.Fare.ToString("0.##") (per seat)</div>
        </div>
    </div>

    @if (TempData["err"] != null)
    {
        <div class="alert alert-warning">@TempData["err"]</div>
    }

    <div class="row g-3">
        <div class="col-lg-8">
            <div class="border rounded p-3">
                <div class="row row-cols-4 g-2">
                    @foreach (var s in Model)
                    {
                        var cls =
                        s.Status == ONLINE_TICKET_BOOKING_SYSTEM.Models.SeatStatus.Blocked ? "btn-secondary"
                        : s.Status == ONLINE_TICKET_BOOKING_SYSTEM.Models.SeatStatus.Booked ? "btn-danger"
                        : "btn-outline-success seat-btn";
                        <div class="col">
                            <button type="button"
                                    class="btn w-100 @cls"
                                    data-seat="@s.SeatNo"
                                    @(s.Status != ONLINE_TICKET_BOOKING_SYSTEM.Models.SeatStatus.Available ? "disabled" : "")>
                                @s.SeatNo
                            </button>
                        </div>
                    }
                </div>

                <div class="mt-3 small">
                    <span class="badge text-bg-secondary">Blocked</span>
                    <span class="badge text-bg-danger">Booked</span>
                    <span class="badge text-bg-success">Selected</span>
                    <span class="badge text-bg-light border">Available</span>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="border rounded p-3">
                <h5 class="mb-3">Passenger</h5>
                <form method="post" asp-action="Confirm" asp-controller="Booking">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="scheduleId" value="@schedule.Id" />
                    <input type="hidden" id="seatNos" name="seatNos" />

                    <div class="mb-2">
                        <label class="form-label">Name</label>
                        <input class="form-control" name="customerName" required />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Phone</label>
                        <input class="form-control" name="customerPhone" required />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Selected Seats</label>
                        <div id="chosen" class="form-control" style="min-height:38px;"></div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-3 border-top pt-2">
                        <div>
                            <div class="small text-muted">Fare per seat: ৳@schedule.Fare</div>
                            <div class="fw-bold">Total: ৳<span id="total">0</span></div>
                        </div>
                        <button id="confirmBtn" class="btn btn-success" disabled>Confirm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const selected = new Set();
    const fare = parseFloat("@schedule.Fare".replace(',', '.'));

    $(document).on('click', '.seat-btn', function () {
        const seat = $(this).data('seat');
        if (selected.has(seat)) {
            selected.delete(seat);
            $(this).removeClass('btn-success').addClass('btn-outline-success');
        } else {
            selected.add(seat);
            $(this).removeClass('btn-outline-success').addClass('btn-success');
        }
        renderSummary();
    });

    function renderSummary() {
        const arr = Array.from(selected).sort();
        $('#chosen').text(arr.join(', '));
        $('#seatNos').val(arr); // form posts array
        $('#total').text((arr.length * fare).toFixed(2));
        $('#confirmBtn').prop('disabled', arr.length === 0);
    }
</script>
