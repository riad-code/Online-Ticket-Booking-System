@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Booking>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Bus Reports";

    var from = (string)(ViewBag.From ?? DateTime.Today.ToString("yyyy-MM-dd"));
    var to = (string)(ViewBag.To ?? DateTime.Today.ToString("yyyy-MM-dd"));

    int ticketsSold = ViewBag.TicketsSold ?? 0;
    decimal revenue = ViewBag.Revenue ?? 0m;
    int cancelled = ViewBag.CancelledCount ?? 0;
    int cancelReq = ViewBag.CancelRequestCount ?? 0;
}
<div class="container py-4">
    <h3 class="mb-3"><i class="fas fa-chart-bar text-success"></i> Bus Reports</h3>

    <form method="get" class="card p-3 mb-3 shadow-sm border-0">
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">From</label>
                <input type="date" name="from" class="form-control" value="@from" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To</label>
                <input type="date" name="to" class="form-control" value="@to" />
            </div>
            <div class="col-md-6 d-flex gap-2">
                <button class="btn btn-success"><i class="fas fa-search"></i> Filter</button>
                <a class="btn btn-outline-success"
                   asp-action="Download"
                   asp-route-from="@from"
                   asp-route-to="@to">
                    <i class="fas fa-file-pdf"></i> Download PDF
                </a>
            </div>
        </div>
    </form>

    <div class="row g-3 mb-3">
        <div class="col-md-3">
            <div class="card bg-success border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-white fw-bold">Tickets Sold</div>
                    <div class="h4 mb-0">@ticketsSold</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-gradient-info border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-white fw-bold">Revenue</div>
                    <div class="h4 mb-0">৳@revenue.ToString("0.##")</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-white fw-bold">Cancelled</div>
                    <div class="h4 mb-0">@cancelled</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning border-0 shadow-sm">
                <div class="card-body">
                    <div class="fw-bold">Cancel Requested</div>
                    <div class="h4 mb-0">@cancelReq</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Route</th>
                        <th>Customer</th>
                        <th>Seats</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var b in Model)
                        {
                            <tr>
                                <td>@b.CreatedAtUtc.ToLocalTime().ToString("dd MMM yyyy")</td>
                                <td>@b.BusSchedule?.From → @b.BusSchedule?.To</td>
                                <td>@b.CustomerName (@b.CustomerPhone)</td>
                                <td>@string.Join(", ", b.Seats.Select(s => s.ScheduleSeat.SeatNo))</td>
                                <td>৳@b.GrandTotal.ToString("0.##")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No data for this period.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
