@using ONLINE_TICKET_BOOKING_SYSTEM.ViewModels
@model CreateScheduleViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Schedule";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-3">
    <div class="d-flex flex-wrap gap-2 align-items-center justify-content-between mb-3">
        <h2 class="mb-0 text-success fw-bold">Create Schedule</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to Schedules</a>
    </div>

    <form id="createScheduleForm" asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <!-- Bus & Route -->
                <div class="row g-3">
                    <div class="col-12">
                        <h6 class="text-secondary text-uppercase fw-bold mb-2">Bus & Route</h6>
                    </div>

                    <div class="col-12 col-lg-6">
                        <label class="form-label">Choose Bus (Vehicle)</label>
                        <select asp-for="BusId" class="form-select" id="busSelect" required>
                            <option value="">-- Select Bus --</option>
                            @foreach (var b in Model.AllBuses)
                            {
                                <option value="@b.Id"
                                        data-from="@b.From"
                                        data-to="@b.To"
                                        data-fullroute="@b.FullRoute"
                                        data-fare="@b.Fare"
                                        data-seats="@b.SeatsAvailable"
                                        data-departure="@b.DepartureTime.ToString(@"hh\:mm")"
                                        data-arrival="@b.ArrivalTime.ToString(@"hh\:mm")">
                                    @b.OperatorName — @b.FullRoute — ৳@b.Fare
                                </option>

                            }
                        </select>
                        <div class="form-text">Route, fare & seats auto-fill from selection (you can still adjust).</div>
                    </div>

                    <input type="hidden" name="From" id="From" />
                    <input type="hidden" name="To" id="To" />

                    <div class="col-12 col-lg-6">
                        <label class="form-label">Full Route</label>
                        <input asp-for="FullRoute" class="form-control bg-success text-white" id="FullRoute" readonly />
                    </div>
                </div>

                <hr class="my-4" />

                <!-- Schedule Details -->
                <div class="row g-3">
                    <div class="col-12">
                        <h6 class="text-secondary text-uppercase fw-bold mb-2">Schedule Details</h6>
                    </div>

                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Journey Date</label>
                        <input asp-for="JourneyDate" class="form-control" type="date" required />
                        <div class="form-text">Past dates are disabled.</div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Departure Time</label>
                        <input asp-for="DepartureTime" class="form-control" type="time" required />
                    </div>

                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Arrival Time</label>
                        <input asp-for="ArrivalTime" class="form-control" type="time" required />
                    </div>

                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Fare (Tk)</label>
                        <input asp-for="Fare" class="form-control" required />
                    </div>

                    <div class="col-12 col-md-6 col-lg-3">
                        <label class="form-label">Seats Available</label>
                        <input asp-for="SeatsAvailable" class="form-control" required />
                    </div>
                </div>

                <hr class="my-4" />

                <!-- Return (Optional) -->
                <div class="row g-3">
                    <div class="col-12 d-flex align-items-center justify-content-between">
                        <h6 class="text-secondary text-uppercase fw-bold mb-2">Return (Optional)</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isReturn" />
                            <label class="form-check-label" for="isReturn">Add Return Bus</label>
                        </div>
                    </div>

                    <div id="returnSection" class="row g-3" style="display:none;">
                        <div class="col-12 col-md-6 col-lg-4">
                            <label class="form-label">Return Date</label>
                            <input asp-for="ReturnDate" class="form-control" type="date" />
                        </div>
                        <div class="col-12 col-md-6 col-lg-8">
                            <label class="form-label">Choose Return Bus</label>
                            <select asp-for="ReturnBusId" class="form-select">
                                <option value="">-- Select Return Bus --</option>
                                @foreach (var b in Model.AllBuses)
                                {
                                    <option value="@b.Id">@b.OperatorName — @b.FullRoute — ৳@b.Fare</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer bg-white d-flex flex-wrap gap-2 justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button class="btn btn-success" type="submit">Save Schedule</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(function () {
            // Select bus -> fill fields
                   $('#busSelect').on('change', function () {
            const sel = $(this).find('option:selected');
            $('#FullRoute').val(sel.data('fullroute') || '');
            $('input[name="Fare"]').val(sel.data('fare') || '');
            $('input[name="SeatsAvailable"]').val(sel.data('seats') || '');
            $('#From').val(sel.data('from') || '');
            $('#To').val(sel.data('to') || '');
            $('input[name="DepartureTime"]').val(sel.data('departure') || '');
            $('input[name="ArrivalTime"]').val(sel.data('arrival') || '');
        });


            // Return toggle
            $('#isReturn').on('change', function () {
                $('#returnSection').toggle(this.checked);
            });

            // Disable past dates
            const today = new Date().toISOString().split('T')[0];
            $('input[name="JourneyDate"]').attr('min', today);
            $('input[name="ReturnDate"]').attr('min', today);

            // AJAX submit
            $('#createScheduleForm').on('submit', function (e) {
                e.preventDefault();
                const url = $(this).attr('action');
                const data = $(this).serialize();

                Swal.fire({ title: 'Saving...', didOpen: () => Swal.showLoading(), allowOutsideClick: false });

                $.post(url, data)
                    .done(res => {
                        if (res.success) {
                            Swal.fire({ icon: 'success', title: res.message || 'Schedule created!', timer: 1500, showConfirmButton: false })
                                .then(() => window.location.href = '@Url.Action("Index")');
                        } else {
                            Swal.fire({ icon: 'error', title: 'Error', text: res.message || 'Failed to create schedule.' });
                        }
                    })
                    .fail(xhr => {
                        const msg = xhr.responseJSON ? xhr.responseJSON.join('\n') : (xhr.responseText || 'Failed to create schedule.');
                        Swal.fire({ icon: 'error', title: 'Error!', text: msg });
                    });
            });

            // HTML5 validation helper (Bootstrap look)
            (function () {
                'use strict';
                const forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            })();
        });
    </script>
}
