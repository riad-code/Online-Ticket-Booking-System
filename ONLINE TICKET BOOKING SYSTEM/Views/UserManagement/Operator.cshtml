@model List<ONLINE_TICKET_BOOKING_SYSTEM.ViewModels.OperatorSummaryViewModel>


@{
    ViewData["Title"] = "Manage Operators";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2 class="mb-4 text-success fw-bold">Manage Operators</h2>
<table id="operatorsTable" class="table table-bordered table-striped align-middle" style="width:100%">
    <thead class="table-success text-success">
        <tr>
            <th>Operator Name</th>
            <th>Total Buses</th>
            <th>Total Routes</th>
            <th>Total Seats Available</th>
            <th>Fare(s) (৳)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OperatorName</td>
                <td>@item.TotalBuses</td>
                <td>@item.TotalRoutes</td>
                <td>@item.TotalSeats</td>
                <td>
                    @foreach (var fare in item.Fares.Split(","))
                    {
                        <span>@fare.Trim() Tk</span>@if(fare != item.Fares.Split(",").Last()) {
                        <span>, </span>
                    }
                }
            </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-success {
        background-color: #d1e7dd !important;
        color: #0f5132 !important;
    }

    tbody tr:hover {
        background-color: #e6f4ea;
        cursor: default;
    }

    th, td {
        vertical-align: middle !important;
        text-align: center;
    }
</style>

@section Styles {
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('#operatorsTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: true,
                pageLength: 10,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search operators..."
                }
            });
        });
    </script>
}
