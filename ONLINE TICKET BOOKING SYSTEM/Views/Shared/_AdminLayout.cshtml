@using Microsoft.AspNetCore.Identity
@using ONLINE_TICKET_BOOKING_SYSTEM.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;

    string fullName = "";
    string profileImagePath = "~/images/default-user.png"; // fallback image

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            fullName = user.FullName ?? user.UserName;
            if (!string.IsNullOrEmpty(user.ProfileImagePath))
            {
                profileImagePath = user.ProfileImagePath;
            }
        }
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Online Ticket Booking System</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css" />

    <style>

        .main-sidebar, .main-header, .main-footer {
            background-color: #fef9f4 !important;
            color: #4a4a4a !important;
        }


            .main-sidebar .nav-sidebar > .nav-item > .nav-link,
            .main-sidebar .brand-link,
            .main-sidebar .user-panel .info a {
                color: #4a4a4a !important;
            }


                .main-sidebar .nav-sidebar > .nav-item > .nav-link:hover {
                    background-color: #e6f7f0 !important;
                    color: #1DBF73 !important;
                }


            .main-header .navbar-nav .nav-link:hover {
                color: #1DBF73 !important;
            }


            .main-footer small {
                color: #4a4a4a !important;
            }


        .user-panel {
            background-color: transparent !important;
        }


        .form-control-sidebar {
            background-color: #fef9f4 !important;
            color: #4a4a4a !important;
            border: 1px solid #d9d2c9 !important;
            box-shadow: none !important;
        }

            .form-control-sidebar::placeholder {
                color: #7a7a7a !important;
            }

        .btn-sidebar {
            background-color: #fef9f4 !important;
            border: 1px solid #d9d2c9 !important;
            color: #1DBF73 !important;
        }

            .btn-sidebar:hover {
                background-color: #e6f7f0 !important;
                border-color: #1DBF73 !important;
                color: #1DBF73 !important;
            }

        .input-group .form-control-sidebar,
        .input-group .btn-sidebar {
            box-shadow: none !important;
        }
    </style>


</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
            </ul>
        </nav>

        <!-- Main Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a asp-controller="Home" asp-action="Index" class="brand-link text-decoration-none">
                <img src="~/Admin/Images/logo.jpg.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8" />
                <span class="brand-text font-weight-light fw-bold text-success">RiadTrip Admin</span>
            </a>


            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@profileImagePath" class="img-circle elevation-2" alt="User Image" style="width: 35px; height: 35px;" />
                    </div>
                    <div class="info">
                        <a href="#" class="d-block text-success text-decoration-none">@fullName</a>
                    </div>
                </div>

                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search" />
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <partial name="_AdminMenu.cshtml" />
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <section class="content">
                <main role="main">
                    @RenderBody()
                </main>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <small>&copy; 2025 Online Ticket Booking System. All rights reserved in RiadTech.</small>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark"></aside>
    </div>

    <!-- Scripts -->
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/dist/js/adminlte.min.js"></script>
    <script src="~/Admin/dist/js/demo.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
