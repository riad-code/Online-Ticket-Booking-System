@using Microsoft.AspNetCore.Identity
@using ONLINE_TICKET_BOOKING_SYSTEM.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    // Null-safe current path
    var currentPathRaw = Context?.Request?.Path.Value ?? string.Empty;

    // Case-insensitive “contains” using IndexOf to support older target frameworks too
    bool PathHas(string fragment) =>
        !string.IsNullOrEmpty(fragment) &&
        currentPathRaw.IndexOf(fragment, System.StringComparison.OrdinalIgnoreCase) >= 0;

    // Hide layout on auth pages
    bool hideLayout =
        PathHas("/account/login") ||
        PathHas("/account/register") ||
        PathHas("/account/forgotpassword") ||
        PathHas("/account/verifyotp") ||
        PathHas("/account/resetpassword");

    // Title
    var titleText = (ViewData["Title"] as string) ?? "ONLINE_TICKET_BOOKING_SYSTEM";

    // Active link flags
    bool isBus = PathHas("/bus");
    bool isAir = PathHas("/air");
    bool isTrain = PathHas("/train");
    bool isEvents = PathHas("/events");
    bool isParks = PathHas("/park");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@titleText - ONLINE_TICKET_BOOKING_SYSTEM</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ONLINE_TICKET_BOOKING_SYSTEM.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            font-family: "Libre Franklin", sans-serif;
        }

        .hover-green-bg {
            transition: all .3s ease;
        }

            .hover-green-bg:hover {
                border: 2px solid #198754;
                color: #198754 !important;
                background-color: transparent !important;
            }

        .active-page {
            border: 2px solid #198754 !important;
            color: #198754 !important;
            background-color: transparent !important;
        }

        /* ✅ Harden the fixed navbar so other page CSS can't unset it */
        .navbar.fixed-top {
            position: fixed !important; /* enforce fixed */
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            z-index: 1030; /* above content/cards/forms */
            backface-visibility: hidden; /* avoid flicker on mobile */
            transform: translateZ(0); /* promote to its own layer */
        }
    </style>
</head>
<body>
    @if (!hideLayout)
    {
        <header>
            <!-- Fixed navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2 fixed-top">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Bus" asp-action="Index" style="height:72px;">
                        <img src="~/Admin/Images/logo.jpg.png" alt="RiadTrip" style="height:72px;width:auto;" />
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#shohozNavbar" aria-controls="shohozNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="shohozNavbar">
                        <ul class="navbar-nav mx-auto align-items-center">
                            <li class="nav-item me-3">
                                <a asp-controller="Bus" asp-action="Index"
                                   class="nav-link d-flex align-items-center text-dark rounded-3 px-3 py-1 hover-green-bg @(isBus ? "active-page" : "")">
                                    <i class="fa-solid fa-bus fs-5 me-1"></i><span>Bus</span>
                                </a>
                            </li>

                            <li class="nav-item me-3">
                                <a asp-controller="Air" asp-action="Index"
                                   class="nav-link d-flex align-items-center text-dark rounded-3 px-3 py-1 hover-green-bg @(isAir ? "active-page" : "")">
                                    <i class="fa-solid fa-plane-up fs-5 me-1"></i><span>Air</span>
                                </a>
                            </li>

                            <li class="nav-item me-3">
                                <a asp-controller="Train" asp-action="Index"
                                   class="nav-link d-flex align-items-center text-dark rounded-3 px-3 py-1 hover-green-bg @(isTrain ? "active-page" : "")">
                                    <i class="bi bi-train-front-fill fs-5 me-1"></i><span>Train</span>
                                </a>
                            </li>

                            <li class="nav-item me-3">
                                <a asp-controller="Events" asp-action="Index"
                                   class="nav-link d-flex align-items-center text-dark rounded-3 px-3 py-1 hover-green-bg @(isEvents ? "active-page" : "")">
                                    <i class="fa-solid fa-calendar-days fs-5 me-1"></i><span>Events</span>
                                </a>
                            </li>

                            <li class="nav-item me-3 position-relative">
                                <a asp-controller="Parks" asp-action="Index"
                                   class="nav-link d-flex align-items-center text-dark rounded-3 px-3 py-1 hover-green-bg @(isParks ? "active-page" : "")">
                                    <i class="bi bi-tree-fill fs-5 me-1"></i><span>Park</span>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:.6rem;">BETA</span>
                                </a>
                            </li>
                        </ul>

                        <ul class="navbar-nav align-items-center">
                            <li class="nav-item me-3">
                                <a href="tel:16374" class="btn btn-success rounded-pill px-4 fw-semibold d-flex align-items-center">
                                    <i class="bi bi-telephone-fill me-2"></i>16374
                                </a>
                            </li>
                        </ul>

                        <partial name="_LoginPartial" />
                    </div> <!-- /collapse -->
                </div> <!-- /container -->
            </nav>
        </header>

        <!-- Spacer that always matches navbar height -->
        <div id="nav-spacer"></div>
    }

    <div class="container-fluid p-0">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    @if (!hideLayout)
    {
        <footer class="text-white pt-5 pb-3" style="background:#238A71; font-family:'Libre Franklin', sans-serif; margin-top:0;">
            <div class="container">
                <div class="row">
                    <!-- Left Branding Column -->
                    <div class="col-md-4 mb-4">
                        <img src="~/Admin/Images/white-logo.png" alt="RiadTrip Logo" style="height:auto;width:150px;" />
                        <p class="mt-1" style="line-height:1.7;">
                            <strong>RiadTrip</strong>, proudly owned and operated by RiadTech Limited, is Bangladesh’s smartest and most trusted online ticket booking platform.
                        </p>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-md-2 mb-4">
                        <h6 class="fw-bold">Quick Links</h6>
                        <ul class="list-unstyled mt-3">
                            <li><a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">Home</a></li>
                            <li><a asp-controller="Pages" asp-action="About" class="text-white text-decoration-none">About Us</a></li>
                            <li><a asp-controller="Pages" asp-action="Contact" class="text-white text-decoration-none">Contact Us</a></li>
                            <li><a asp-controller="Pages" asp-action="Deals" class="text-white text-decoration-none">Deals and Offer</a></li>
                            <li><a asp-controller="Pages" asp-action="InsuranceClaim" class="text-white text-decoration-none">Insurance Claim</a></li>
                            <li><a asp-controller="Pages" asp-action="CancelTicket" class="text-white text-decoration-none">Cancel Bus Ticket</a></li>
                            <li><a asp-controller="Pages" asp-action="AirCancelTicket" class="text-white text-decoration-none">Cancel Air Ticket</a></li>
                            <li><a asp-controller="Pages" asp-action="BusReservation" class="text-white text-decoration-none">Bus Reservation</a></li>
                            <li><a asp-controller="Pages" asp-action="Blog" class="text-white text-decoration-none">Blog</a></li>
                        </ul>
                    </div>

                    <!-- Services -->
                    <div class="col-md-3 mb-4">
                        <h6 class="fw-bold">Services</h6>
                        <ul class="list-unstyled mt-3">
                            <li><a href="/Bus" class="text-white text-decoration-none">Bus Tickets</a></li>
                            <li><a href="/Air" class="text-white text-decoration-none">Air Tickets</a></li>
                            <li><a href="/Train" class="text-white text-decoration-none">Train Tickets</a></li>
                            <li><a href="/Events" class="text-white text-decoration-none">Event Tickets</a></li>
                            <li><a href="/Parks" class="text-white text-decoration-none">Park Tickets</a></li>
                        </ul>
                    </div>

                    <!-- Information -->
                    <div class="col-md-3 mb-4">
                        <h6 class="fw-bold">Information</h6>
                        <ul class="list-unstyled mt-3">
                            <li><a asp-controller="Info" asp-action="PrivacyPolicy" class="text-white text-decoration-none">Privacy Policy</a></li>
                            <li><a asp-controller="Info" asp-action="Terms" class="text-white text-decoration-none">Terms & Conditions</a></li>
                        </ul>
                    </div>
                </div> <!-- /row -->
                <!-- Bottom -->
                <div class="row pt-3 mt-3">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; 2025 RiadTech Ltd. All Rights Reserved.</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <a href="https://www.facebook.com/ahriadahmmed" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://www.instagram.com/riiddsss21" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="https://www.linkedin.com/in/abrar-hanif-riad" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div> <!-- /row -->
            </div> <!-- /container -->
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        (function () {
          var nav = document.querySelector('.navbar.fixed-top');
          var spacer = document.getElementById('nav-spacer');
          function sync() {
            if (!nav || !spacer) return;
            spacer.style.height = nav.offsetHeight + 'px';
          }
          window.addEventListener('load', sync);
          window.addEventListener('resize', sync);
          document.addEventListener('shown.bs.collapse', sync);
          document.addEventListener('hidden.bs.collapse', sync);
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
