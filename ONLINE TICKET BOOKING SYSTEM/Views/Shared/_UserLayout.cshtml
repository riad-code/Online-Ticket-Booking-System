@using Microsoft.AspNetCore.Identity
@using ONLINE_TICKET_BOOKING_SYSTEM.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;

    string fullName = "";
    string profileImagePath = "~/images/default-user.png"; // fallback image

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            fullName = user.FullName ?? user.UserName;
            if (!string.IsNullOrEmpty(user.ProfileImagePath))
            {
                profileImagePath = user.ProfileImagePath;
            }
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>RiadTrip - User Panel</title>

    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css" />
    <style>

        .main-sidebar, .main-header, .main-footer {
            background-color: #fef9f4 !important;
            color: #4a4a4a !important;
        }


            .main-sidebar .nav-sidebar > .nav-item > .nav-link,
            .main-sidebar .brand-link,
            .main-sidebar .user-panel .info a {
                color: #4a4a4a !important;
            }


                .main-sidebar .nav-sidebar > .nav-item > .nav-link:hover {
                    background-color: #e6f7f0 !important;
                    color: #1DBF73 !important;
                }


            .main-header .navbar-nav .nav-link:hover {
                color: #1DBF73 !important;
            }


            .main-footer small {
                color: #4a4a4a !important;
            }


        .user-panel {
            background-color: transparent !important;
        }


        .form-control-sidebar {
            background-color: #fef9f4 !important;
            color: #4a4a4a !important;
            border: 1px solid #d9d2c9 !important;
            box-shadow: none !important;
        }

            .form-control-sidebar::placeholder {
                color: #7a7a7a !important;
            }

        .btn-sidebar {
            background-color: #fef9f4 !important;
            border: 1px solid #d9d2c9 !important;
            border-color: #1DBF73 !important;
            color: #1DBF73 !important;
        }

            .btn-sidebar:hover {
                background-color: #e6f7f0 !important;
                border-color: #1DBF73 !important;
                color: #1DBF73 !important;
            }

        .input-group .form-control-sidebar,
        .input-group .btn-sidebar {
            box-shadow: none !important;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-success elevation-4">
            <!-- Brand Logo -->
            <a asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/Admin/Images/logo.jpg.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8" />
                <span class="brand-text font-weight-light fw-bold text-success">RiadTrip</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- User Panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@profileImagePath" class="img-circle elevation-2" alt="User Image" style="width: 35px; height: 35px;" />
                    </div>
                    <div class="info">
                        <a href="#" class="d-block ">@fullName</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">

                        <!-- Sidebar Search -->
                        <div class="form-inline mb-2">
                            <div class="input-group" data-widget="sidebar-search">
                                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search" />
                                <div class="input-group-append">
                                    <button class="btn btn-sidebar">
                                        <i class="fas fa-search fa-fw"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- My Bookings -->
                        <li class="nav-item">
                            <a asp-controller="Booking" asp-action="MyBookings" class="nav-link">
                                <i class="nav-icon fas fa-ticket-alt"></i>
                                <p>My Bookings</p>
                            </a>
                        </li>

                        <!-- Profile -->
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Profile" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>My Profile</p>
                            </a>
                        </li>

                        <!-- Logout -->
                        <li class="nav-item mt-3">
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                <button type="submit" class="nav-link btn btn-link text-left text-success w-100">
                                    <i class="nav-icon fas fa-sign-out-alt"></i>
                                    <p>Logout</p>
                                </button>
                            </form>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="content-wrapper">
            <section class="content">
                <main role="main" class="container-fluid py-3">
                    @RenderBody()
                </main>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer text-center bg-dark text-white py-2">
            <small>&copy; @DateTime.Now.Year RiadTrip. All rights reserved in RiadTech.</small>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/dist/js/adminlte.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
