@model List<ONLINE_TICKET_BOOKING_SYSTEM.ViewModels.BookingSummaryVm>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "User Dashboard";
}

<div class="container-fluid py-3">
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="small">My Bookings</div>
                    <div class="fs-3 fw-bold">@ViewData["MyBookingsCount"]</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="small">Upcoming Trips</div>
                    <div class="fs-3 fw-bold">@ViewData["UpcomingTrips"]</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow">
                <div class="card-body">
                    <div class="small">Pending Payments</div>
                    <div class="fs-3 fw-bold">@ViewData["PendingPayments"]</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    <div class="small">Cancelled</div>
                    <div class="fs-3 fw-bold">@ViewData["CancelledTrips"]</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Recent Bookings</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Route</th>
                            <th>Operator</th>
                            <th>Journey</th>
                            <th>Seats</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Payment</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model?.Any() == true)
                        {
                            foreach (var r in Model)
                            {
                                <tr>
                                    <td>@r.Id</td>
                                    <td>@r.Route</td>
                                    <td>@r.OperatorName</td>
                                    <td>@r.JourneyDate:dd MMM yyyy</td>
                                    <td>@r.SeatsCsv</td>
                                    <td>৳@r.TotalFare</td>
                                    <td>@r.Status</td>
                                    <td>@r.PaymentStatus</td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-success"
                                           asp-controller="Booking" asp-action="Details" asp-route-id="@r.Id">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="9" class="text-center text-muted py-4">No bookings yet.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
