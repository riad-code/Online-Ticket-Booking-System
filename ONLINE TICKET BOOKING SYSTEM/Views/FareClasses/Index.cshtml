@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.FareClass>
@{
    ViewData["Title"] = "Fare Classes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<h2 class="mb-4 text-success fw-bold">Manage Fare Classes</h2>

<p>
    <a class="btn btn-success" href="/FareClasses/Create">
        <i class="bi bi-plus-circle me-1"></i> Create Fare Class
    </a>
</p>

<table id="fareClassesTable" class="table table-bordered table-striped align-middle" style="width:100%">
    <thead class="table-success text-success">
        <tr>
            <th>Flight</th>
            <th>Cabin</th>
            <th>RBD</th>
            <th>Seats</th>
            <th>Base</th>
            <th>Tax</th>
            <th>Currency</th>
            <th>Refundable</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model ?? Enumerable.Empty<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.FareClass>())
        {
            <tr>
                <td>
                    @f.FlightSchedule?.Airline?.Name @f.FlightSchedule?.FlightNumber
                    (@f.FlightSchedule?.FromAirport?.IataCode → @f.FlightSchedule?.ToAirport?.IataCode)
                </td>
                <td>@f.Cabin</td>
                <td>@f.Rbd</td>
                <td>@f.SeatsAvailable</td>
                <td>@f.BaseFare</td>
                <td>@f.TaxesAndFees</td>
                <td>@f.Currency</td>
                <td>@(f.Refundable ? "Yes" : "No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-success" href="/FareClasses/Edit/@f.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-danger ms-1" href="/FareClasses/Delete/@f.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-success {
        background-color: #d1e7dd !important;
        color: #0f5132 !important;
    }

    tbody tr:hover {
        background-color: #e6f4ea;
        cursor: default;
    }

    th, td {
        vertical-align: middle !important;
        text-align: center;
    }
</style>

@section Styles {
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('#fareClassesTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: true,
                pageLength: 10,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search fare classes..."
                },
                columnDefs: [
                    { orderable: false, targets: 8 } // Actions column
                ]
            });
        });
    </script>
}
