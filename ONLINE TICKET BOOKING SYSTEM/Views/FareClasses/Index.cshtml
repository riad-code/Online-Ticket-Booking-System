@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.FareClass>
@{
    ViewData["Title"] = "Fare Classes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<h3 class="mb-3">Fare Classes</h3>
<p><a class="btn btn-success" href="/FareClasses/Create">Create</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Flight</th>
            <th>Cabin</th>
            <th>RBD</th>
            <th>Seats</th>
            <th>Base</th>
            <th>Tax</th>
            <th>Currency</th>
            <th>Refundable</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.FlightSchedule?.Airline?.Name @f.FlightSchedule?.FlightNumber (@f.FlightSchedule?.FromAirport?.IataCode → @f.FlightSchedule?.ToAirport?.IataCode)</td>
                <td>@f.Cabin</td>
                <td>@f.Rbd</td>
                <td>@f.SeatsAvailable</td>
                <td>@f.BaseFare</td>
                <td>@f.TaxesAndFees</td>
                <td>@f.Currency</td>
                <td>@(f.Refundable ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/FareClasses/Edit/@f.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/FareClasses/Delete/@f.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
