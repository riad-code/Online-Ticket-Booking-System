            function toggleReturnDate() {
                if ($('#oneWay').is(':checked')) {
                    $('#returnDateDiv').hide();
                } else {
                    $('#returnDateDiv').show();
                }
            }

            toggleReturnDate();

            $('input[name="tripType"]').change(function () {
