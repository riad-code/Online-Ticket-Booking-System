@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.FlightSchedule>
@{
    ViewData["Title"] = "Flight Schedules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Flight Schedules</h3>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Flight #</th>
            <th>From</th>
            <th>To</th>
            <th>Dep</th>
            <th>Arr</th>
            <th>Days</th>
            <th style="width:160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Airline?.Name</td>
                <td>@s.FlightNumber</td>
                <td>@s.FromAirport?.IataCode</td>
                <td>@s.ToAirport?.IataCode</td>
                <td>@s.DepTimeLocal.ToString("HH\\:mm")</td>
                <td>@s.ArrTimeLocal.ToString("HH\\:mm")</td>
                <td>
                    @{
                        // Sun=0..Sat=6, bit set => operates
                        var days = new[] { "Su", "Mo", "Tu", "We", "Th", "Fr", "Sa" };
                        var on = new List<string>();
                        for (int i = 0; i < 7; i++) if ((s.OperatingDaysMask & (1 << i)) != 0) on.Add(days[i]);
                    }
                    @string.Join(",", on)
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
