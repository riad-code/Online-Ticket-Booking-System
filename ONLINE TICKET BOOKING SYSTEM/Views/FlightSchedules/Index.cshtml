@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.FlightSchedule>
@{
    ViewData["Title"] = "Flight Schedules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<h2 class="mb-4 text-success fw-bold">Manage Flight Schedules</h2>

<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-circle me-1"></i> Create
    </a>
</p>

<table id="flightSchedulesTable" class="table table-bordered table-striped align-middle" style="width:100%">
    <thead class="table-success text-success">
        <tr>
            <th>Airline</th>
            <th>Flight</th>
            <th>Route</th>
            <th>Dep</th>
            <th>Arr</th>
            <th>DaysMask</th>
            <th>Equip</th>
            <th style="width:180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model ?? Enumerable.Empty<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.FlightSchedule>())
        {
            <tr>
                <td>@f.Airline?.Name</td>
                <td class="fw-semibold">@f.FlightNumber</td>
                <td>
                    @f.FromAirport?.IataCode → @f.ToAirport?.IataCode
                </td>
                <td>@f.DepTimeLocal</td>
                <td>@f.ArrTimeLocal</td>
                <td>@f.OperatingDaysMask</td>
                <td>@f.Equipment</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@f.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-danger ms-1" asp-action="Delete" asp-route-id="@f.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table-success {
        background-color: #d1e7dd !important;
        color: #0f5132 !important;
    }

    tbody tr:hover {
        background-color: #e6f4ea;
        cursor: default;
    }

    th, td {
        vertical-align: middle !important;
        text-align: center;
    }
</style>

@section Styles {
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            $('#flightSchedulesTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                lengthChange: true,
                pageLength: 10,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search flight schedules..."
                },
                columnDefs: [
                    { orderable: false, targets: 7 } // Actions column
                ]
            });
        });
    </script>
}
