@model IEnumerable<ONLINE_TICKET_BOOKING_SYSTEM.Models.Air.FlightSchedule>
@{
    ViewData["Title"] = "Flight Schedules";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<h3 class="mb-3">Flight Schedules</h3>
<p><a class="btn btn-success" asp-action="Create">Create</a></p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Flight</th>
            <th>Route</th>
            <th>Dep</th>
            <th>Arr</th>
            <th>DaysMask</th>
            <th>Equip</th>
            <th style="width:160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Airline?.Name</td>
                <td>@f.FlightNumber</td>
                <td>@f.FromAirport?.IataCode → @f.ToAirport?.IataCode</td>
                <td>@f.DepTimeLocal</td>
                <td>@f.ArrTimeLocal</td>
                <td>@f.OperatingDaysMask</td>
                <td>@f.Equipment</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@f.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@f.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
