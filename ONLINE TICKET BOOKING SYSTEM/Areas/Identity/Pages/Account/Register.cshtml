@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid vh-100 p-0">
    <div class="row g-0 h-100">
        <!-- LEFT SIDE: IMAGE SLIDER -->
        <div class="col-md-6 d-none d-md-block p-0">
            <div id="registerCarousel" class="carousel slide h-100" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active h-100">
                        <img src="~/Admin/images/slider1.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 1">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Join Us, Explore More</h4>
                        </div>
                    </div>
                    <div class="carousel-item h-100">
                        <img src="~/Admin/images/slider2.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 2">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Travel Made Easy with Shohoz</h4>
                        </div>
                    </div>
                    <div class="carousel-item h-100">
                        <img src="~/Admin/images/slider3.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 3">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Think Tickets, Think Shohoz</h4>
                        </div>
                    </div>
                </div>
                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#registerCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#registerCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>

        <!-- RIGHT SIDE: REGISTER FORM -->
        <div class="col-md-6 d-flex align-items-center justify-content-center position-relative">
            <!-- Logo at top-right corner -->
            <a href="/" class="position-absolute" style="top: 20px; right: 30px;">
                <img src="~/Admin/Images/logo.jpg" alt="Shohoz Logo" style="width: 120px;" />
            </a>

            <div class="p-5 w-100" style="max-width: 450px;">
                <h4 class="fw-bold mb-2">Create an Account</h4>
                <p class="text-muted mb-4">Sign up to enjoy seamless travel across all services</p>

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Full Name -->
                    <div class="mb-3">
                        <input type="text" name="FullName" class="form-control form-control-lg" placeholder="Full Name" required />
                    </div>

                    <!-- Email -->
                    <div class="mb-3">
                        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Email Address" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Phone -->
                    <div class="mb-3">
                        <input type="tel" name="PhoneNumber" class="form-control form-control-lg" placeholder="Phone Number" required />
                    </div>

                    <!-- Gender -->
                    <div class="mb-3">
                        <select name="Gender" class="form-control form-control-lg" required>
                            <option value="" selected disabled>Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <!-- Date of Birth -->
                    <div class="mb-3">
                        <input type="date" name="DateOfBirth" class="form-control form-control-lg" required />
                    </div>

                    <!-- Password -->
                    <div class="mb-3 position-relative">
                        <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password" type="password" id="passwordInput" />
                        <button type="button" class="btn btn-sm position-absolute end-0 top-50 translate-middle-y me-2" onclick="togglePassword('passwordInput')" style="background:none; border:none;">
                            <i class="bi bi-eye-fill"></i>
                        </button>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="mb-3 position-relative">
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password" type="password" id="confirmPasswordInput" />
                        <button type="button" class="btn btn-sm position-absolute end-0 top-50 translate-middle-y me-2" onclick="togglePassword('confirmPasswordInput')" style="background:none; border:none;">
                            <i class="bi bi-eye-fill"></i>
                        </button>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Register Button -->
                    <button type="submit" class="btn btn-success w-100 py-2 fw-bold" style="background-color:#198754; border:none;">Sign Up</button>

                    <!-- Links -->
                    <div class="mt-3 text-center">
                        <span>Already have an account?</span>
                        <a asp-page="./Login" class="text-decoration-none text-success fw-semibold">Log In</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(id) {
            var input = document.getElementById(id);
            input.type = (input.type === 'password') ? 'text' : 'password';
        }
    </script>
}
