@page
@model ForgotPasswordModel
@{
   
    ViewData["Title"] = "Forgot Password";
}

<div class="container-fluid vh-100 p-0">
    <div class="row g-0 h-100">
        <!-- LEFT SIDE: IMAGE SLIDER -->
        <div class="col-md-6 d-none d-md-block position-relative p-0">
            <div id="forgotCarousel" class="carousel slide h-100" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active h-100">
                        <img src="~/Admin/images/slider1.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 1">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Reset Your Password Easily</h4>
                        </div>
                    </div>
                    <div class="carousel-item h-100">
                        <img src="~/Admin/images/slider2.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 2">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Stay Secure with RiadTrip</h4>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#forgotCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#forgotCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>

        <!-- RIGHT SIDE: FORM -->
        <div class="col-md-6 d-flex align-items-center justify-content-center position-relative">
            <a href="/" class="position-absolute" style="top: 20px; right: 30px;">
                <img src="~/Admin/Images/logo.jpg.png" alt="RiadTrip Logo" style="width: 160px;" />
            </a>

            <div class="container vh-100 d-flex justify-content-center align-items-center">
                <div class="card shadow p-4" style="width:400px;">
                    <h4 class="fw-bold text-center mb-3">Forgot Password?</h4>
                    <p class="text-muted text-center">Enter your email to receive an OTP</p>

                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" type="email" class="form-control form-control-lg" placeholder="Enter Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Send OTP</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
