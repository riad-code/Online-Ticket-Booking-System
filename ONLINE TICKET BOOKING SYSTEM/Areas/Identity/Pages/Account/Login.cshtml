@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<style>
    /* adds a red star after elements marked with .req */
    .req::after {
        content: " *";
        color: #dc3545;
        font-weight: 700;
    }
</style>

<div class="container-fluid vh-100 p-0">
    <div class="row g-0 h-100">
        <!-- LEFT SIDE: IMAGE SLIDER -->
        <div class="col-md-6 d-none d-md-block position-relative p-0">
            <div id="loginCarousel" class="carousel slide h-100" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active h-100">
                        <img src="~/Admin/images/slider1.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 1">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Think Tickets, Think RiadTrip</h4>
                        </div>
                    </div>
                    <div class="carousel-item h-100">
                        <img src="~/Admin/images/slider2.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 2">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Your Journey, Our Responsibility</h4>
                        </div>
                    </div>
                    <div class="carousel-item h-100">
                        <img src="~/Admin/images/slider3.jpg" class="d-block w-100 h-100" style="object-fit: cover; border-radius: 0 30px 30px 0;" alt="Slider 3">
                        <div class="carousel-caption d-none d-md-block text-start ps-5" style="bottom: 40px;">
                            <h4 class="text-white fw-bold">Travel Smarter with RiadTrip</h4>
                        </div>
                    </div>
                </div>
                <!-- Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#loginCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#loginCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>

        <!-- RIGHT SIDE: LOGIN FORM -->
        <div class="col-md-6 d-flex align-items-center justify-content-center position-relative">
            <!-- Logo at top-right corner -->
            <a href="/" class="position-absolute" style="top: 20px; right: 30px;">
                <img src="~/Admin/Images/logo.jpg.png" alt="RiadTrip Logo" style="width: 160px;" />
            </a>

            <div class="p-4 w-100" style="max-width: 400px;">
                <h3 class="fw-bold mb-2">Welcome</h3>
                <p class="text-muted mb-4">Login with your RiadTrip account and enjoy a seamless journey across all services</p>

                <form method="post" id="account">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Email -->
                    <div class="mb-2">
                        <label asp-for="Input.Email" class="form-label fw-semibold req"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Enter email or mobile number" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-2">
                        <label asp-for="Input.Password" class="form-label fw-semibold req"></label>
                        <div class="position-relative">
                            <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password" type="password" id="passwordInput" />
                            <button type="button" class="btn btn-sm position-absolute end-0 top-50 translate-middle-y me-2" onclick="togglePassword()" style="background:none; border:none;">
                                <i class="bi bi-eye-fill"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me (not required, no star) -->
                    <div class="form-check mb-3">
                        <input asp-for="Input.RememberMe" class="form-check-input" />
                        <label asp-for="Input.RememberMe" class="form-check-label"></label>
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="btn btn-success w-100 py-2 fw-bold" style="background-color:#198754; border:none;">Log In</button>

                    <!-- Links -->
                    <div class="mt-3 text-center">
                        <a asp-page="./ForgotPassword" class="text-decoration-none text-success fw-semibold">Forgot Password</a>
                    </div>
                    <div class="mt-2 text-center">
                        <span>Don't have an account?</span>
                        <a asp-page="./Register" class="text-decoration-none text-success fw-semibold">Create Account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            var input = document.getElementById('passwordInput');
            input.type = (input.type === 'password') ? 'text' : 'password';
        }
    </script>
}
